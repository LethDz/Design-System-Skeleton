{
  "plugins": ["stylelint-prettier"],
  "rules": {
    "prettier/prettier": [
      true,
      {
        "trailingComma": "es5",
        "tabWidth": 2,
        "semi": true,
        "singleQuote": true,
        "singleAttributePerLine": true,
        "bracketSameLine": false,
        "bracketSpacing": true,
        "endOfLine": "lf",
        "printWidth": 100,
        "arrowParens": "always",
        "jsxSingleQuote": true
      }
    ]
  },
  "extends": ["stylelint-config-sass-guidelines", "stylelint-prettier/recommended"]
}
